generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "darwin-arm64"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String         @id @default(cuid())
  email         String         @unique
  password      String
  name          String
  createdAt     DateTime       @default(now())
  allergies     String?
  image         String?
  phone         String?
  diagnoses     Diagnosis[]
  notifications Notification[]
}

model Doctor {
  id           String         @id @default(cuid())
  email        String         @unique
  password     String
  name         String
  specialty    String
  createdAt    DateTime       @default(now())
  meetLink     String?
  appointments Appointment[]
  availability Availability[]
  phone        String?        // เพิ่มบรรทัดนี้ ถ้ายังไม่มี
  image        String?        // เพิ่มบรรทัดนี้ ถ้ายังไม่มี
}

model Admin {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  createdAt DateTime @default(now())
}

model Availability {
  id        String     @id @default(cuid())
  doctorId  String
  date      DateTime
  doctor    Doctor     @relation(fields: [doctorId], references: [id])
  timeSlots TimeSlot[]
}

model TimeSlot {
  id             String       @id @default(cuid())
  time           String
  availabilityId String
  availability   Availability @relation(fields: [availabilityId], references: [id])
}

model Appointment {
  id           String        @id @default(cuid())
  doctorId     String
  patientName  String
  patientEmail String
  date         DateTime
  time         String
  type         TreatmentType
  symptoms     String
  createdAt    DateTime      @default(now())
  doctor       Doctor        @relation(fields: [doctorId], references: [id])
  diagnoses    Diagnosis[]
  messages     Message[]     @relation("AppointmentMessages")
}

model Diagnosis {
  id            String       @id @default(uuid())
  imagePath     String
  result        String
  confidence    Float
  createdAt     DateTime     @default(now())
  userId        String
  appointmentId String?
  explanation   String?
  findings      String?
  appointment   Appointment? @relation(fields: [appointmentId], references: [id])
  user          User         @relation(fields: [userId], references: [id])
}

model Notification {
  id        String   @id @default(cuid())
  message   String
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())
  userId    String
  notified  Boolean  @default(false)
  user      User     @relation(fields: [userId], references: [id])
}

model Message {
  id            String      @id @default(cuid())
  text          String
  timestamp     DateTime    @default(now())
  senderId      String
  appointmentId String
  appointment   Appointment @relation("AppointmentMessages", fields: [appointmentId], references: [id])
}

enum TreatmentType {
  VIDEO_CALL
  CLEANING
  ORTHODONTIC
  AI_DIAGNOSIS
  SURGERY
}
